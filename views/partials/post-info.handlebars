<article class="post">
  <div class="title">
    <a class="title" href="/post/{{id}}"><h3>{{title}}</h3></a>
  </div>
  <div>{{post_text}}</div>
  <div class="meta">
    by
    <b>{{user.username}}</b>
    on
    {{format_date created_at}}<br />
    <div class="meta"><a href="/post/{{id}}">{{comments.length}}
        {{format_plural "comment" comments.length}}</a></div>
  </div>
</article>